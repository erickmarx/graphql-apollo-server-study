{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "noErrorTruncation": true,
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@configs/*": ["./src/configs/*"],
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/shared/*"],
      "@/*": ["./src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}
